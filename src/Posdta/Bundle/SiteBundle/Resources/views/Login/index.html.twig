<script type="text/javascript" >
var ml, ps;
$(document).ready(function(){
	initialize();
	
});

$(document).keypress(function(e){
	if(e.which == 13){
		if(ps.is(':focus')){
			//do login
			loginPosdta();
		}
		if(ml.is(':focus')){
			//tab instead
			ps.focus();
		}
	}
	
});

function initialize() {
	ml = $('#posdtaUser');
	ps = $('#posdtaPass');
}

function loginPosdta() {
	if(ml.val() == "") {
		displayWarning("Ingresa tu correo.",ml); return; 
	}
	if(ps.val() == "") {
		displayWarning("Ingresa tu pass.",ps); return; 
	}
	login(ml.val(), ps.val());
}

function login(user, pass) {
	$.ajax({
		type: "POST",
		url: "{{ path('posdta_login') }}",
		data: "ml="+user+"&pw="+pass,
		success:function(data){
			console.log(data);
			var obj = jQuery.parseJSON(data);
			if(obj.code == '0000000' ){
				window.location.href = "{{ path('index') }}";
			} else { displayWarningByCode(obj.code);}
		},
		error:function(xhr, status, text){
			displayErrorByCode(xhr.status);
		}
	});
}
</script>
